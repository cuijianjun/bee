page {
  background-color: #f4f4f4;
}
.search-wrap {
  width: 100%;
  height: 114rpx;
  background-color: #ea444e;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.search-inner-wrap {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #999;
  background-color: #fff;
}
.search-icon {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.swiper-wrap {
  width: 100%;
  height: 360rpx;
}
.swiper-inner-wrap {
  width: 100%;
  height: 100%;
}
.swiper-img {
  display: block;
  width: 100%;
  height: 100%;
}
.type-container {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #999;
}
.scroll-view-wrap {
  height: 100%;
  white-space: nowrap;
}
.type-item {
  display: inline-block;
  padding: 0 30rpx;
  height: 100%;
  font-size: 36rpx;
  color: #333;
  text-align: center;
  line-height: 1;
}
.active-type {
  color: #ee3f50;
}
