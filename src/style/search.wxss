.search-wrap {
  height: 90rpx;
  background-color: #ea444e;
  display: flex;
  flex: 1;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.search-wrap .search-inner-wrap {
  position: relative;
  width: 100%;
  height: 70rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #999;
  background-color: #fff;
}
.search-wrap .search-icon {
  position: absolute;
  left: 17rpx;
  top: 17rpx;
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.search-wrap .search-text {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding: 0 20rpx 0 60rpx;
  color: #333;
  box-sizing: border-box;
}
.search-wrap .search-btn {
  width: 160rpx;
  height: 100%;
  color: #fff;
  font-size: 30rpx;
}
.search-keyword-wrap {
  background-color: #fff;
  margin-bottom: 30rpx;
  padding: 20rpx;
}
.search-keyword-wrap .title {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.search-keyword-wrap .list-wrap {
  font-size: 30rpx;
  color: #999;
  display: flex;
  flex-wrap: wrap;
}
.search-keyword-wrap .search-item {
  height: 50rpx;
  padding: 0 20rpx;
  background-color: #f2f2f2;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}
