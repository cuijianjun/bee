.publish-msg-item {
  padding: 20rpx 25rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.msg-top-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.msg-top-wrap .user-wrap {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 104rpx;
}
.msg-top-wrap .user-photo {
  display: block;
  width: 104rpx;
  height: 104rpx;
  margin-right: 16rpx;
}
.msg-top-wrap .user-msg-wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 0;
}
.msg-top-wrap .user-name {
  font-size: 30rpx;
  color: #3aa1c2;
  margin-bottom: 10rpx;
}
.msg-top-wrap .msg-type {
  display: inline;
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 10rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: #2bdda9;
  border-radius: 4rpx;
}
.msg-top-wrap .msg-tell-wrap {
  width: 180rpx;
  height: 60rpx;
  font-size: 30rpx;
  background-color: #ee3f50;
  color: #fff;
  border-radius: 10rpx;
}
.msg-top-wrap .icon-tell {
  width: 40rpx;
  height: 40rpx;
}
.msg-content-wrap {
  max-height: 126rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
  margin: 20rpx 0;
}
.msg-img-wrap {
  width: 100%;
  display: flex;
  justify-content: flex-start;
}
.msg-img-wrap .msg-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
.msg-time-wrap {
  font-size: 24rpx;
  color: #333;
  margin: 20rpx 0;
}
.address-wrap {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #3aa1c2;
  margin-bottom: 20rpx;
}
.address-wrap .address-icon {
  width: 40rpx;
  height: 40rpx;
}
.address-wrap .address-text {
  padding-left: 10rpx;
}
.msg-see-wrap {
  width: 100%;
  height: 54rpx;
  background-color: #f2f2f2;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 26rpx;
  box-sizing: border-box;
}
.msg-see-wrap .see-count-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}
.msg-see-wrap .icon-see {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.msg-see-wrap .see-detail {
  font-size: 24rpx;
  color: #3aa1c2;
}
page {
  background: #eee;
}
.type-container-publish {
  background-color: #fff;
  border-bottom: 1rpx solid #999;
  align-items: center;
  height: 100rpx;
  width: 100%;
  display: flex;
}
.type-container-publish .type-item {
  height: 100%;
  line-height: 100rpx;
  box-sizing: border-box;
  flex: 1;
}
.btn-warp {
  display: flex;
  width: 200rpx;
  justify-content: space-between;
}
.btn-warp .cfn-btn-item {
  color: #FFF;
  width: 80rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  /*border: 1px solid #ccc;*/
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.btn-warp .cfn-btn-item.modify {
  background-color: #19b5d4;
}
.btn-warp .cfn-btn-item.remove {
  background-color: #cc4848;
}
.order-list {
  font-size: 28rpx;
}
.order-list .item {
  background: #FFF;
  margin-bottom: 20rpx;
}
.order-list .item .top {
  display: flex;
  padding: 20rpx;
}
.order-list .item .top .img-box {
  width: 200rpx;
  height: 200rpx;
}
.order-list .item .top .img-box image {
  display: block;
  width: 100%;
  height: 100%;
}
.order-list .item .top .info-box {
  flex: 1;
  padding: 20rpx;
}
.order-list .item .top .info-box .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.order-list .item .top .info-box .num {
  font-size: 24rpx;
  color: #666;
}
.order-list .item .bottom {
  border-top: 1px solid #eee;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: flex-end;
}
.order-list .item .bottom .btn {
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #ccc;
  margin-left: 20rpx;
}
.order-list .item .bottom .btn.red {
  color: #fff;
  background: #cc4848;
}
