page {
  background-color: #f2f2f2;
}
.publish-msg-wrap {
  background-color: #fff;
  padding: 20rpx;
}
.publish-msg-wrap .product-title {
  font-size: 40rpx;
  color: #333;
}
.publish-msg-wrap .product-brief-wrap {
  padding: 20rpx 0;
}
.publish-msg-wrap .brief {
  width: 100%;
  min-height: 100rpx;
  font-size: 32rpx;
  color: #999;
  line-height: 1;
}
.product-pic {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.product-pic .pic-wrap,
.product-pic .add_img {
  position: relative;
  display: block;
  width: 170rpx;
  height: 170rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.product-pic .add_img:nth-child(4n) {
  margin-right: 0;
}
.product-pic .close-img {
  display: block;
  position: absolute;
  right: 0;
  top: 0;
  width: 50rpx;
  height: 50rpx;
}
.publish-user-msg {
  background-color: #fff;
  margin-top: 30rpx;
}
.publish-user-msg .user-group-wrap {
  height: 84rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 0 20rpx;
  color: #333;
}
.publish-user-msg .title {
  width: 170rpx;
}
.publish-user-msg .content {
  position: relative;
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
}
.publish-user-msg .content2 {
  width: 64rpx;
  height: 64rpx;
}
.publish-user-msg .location-wrap,
.publish-user-msg .location-img {
  width: 100%;
  height: 100%;
}
.publish-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #ee404a;
}
